<span class="rte_character-renderer"
      @onclick="DispatchRichTextEditorOnClickAction">
    @if (Character == string.Empty)
    {
        <span style="width: 4px; height: 100%;"></span>
    }
    else
    {
        @((MarkupString) Character)
    }

    @if(IsFocused && ShouldDisplayCursor) 
    {
        <Cursor />
    }
</span>